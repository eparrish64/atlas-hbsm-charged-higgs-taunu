#! /usr/bin/env python
"""
simple script for submitting jobs to a cluster.
KEEP IT IN THE MAIN PACKAGE DIR, UNPICKELING FAILS OTHERWISE! 
"""
 
if __name__=="__main__":
        import sys, os
        import socket
        import time
        import ROOT
        import dill
        from hpana.dataset_hists import dataset_hists

        if 'cedar' in socket.gethostname():
            jobname = os.getenv("SLURM_JOB_NAME")
        else:
            jobname = os.getenv("PBS_JOBNAME")

        with open(sys.argv[1], "rb") as pfile:
                ana = dill.load(pfile)

        # - - - - load cxx macros
        ana.compile_cxx()
        workers = filter(lambda w: w.name==jobname, ana.getWorkers())
        
        assert (len(workers) >0) and (len(workers)==1),\
            "no matching worker or two workers with the same name!!"
        
        worker = workers[0]
        print "WORKER: ", worker

        # - - get the hists 
        
        start_time = time.time()
        dataset_hists(worker, write_hists=True, outdir="./")
        end_time = time.time()
        print "Execution Time:\t %0.2f"%(end_time - start_time)
